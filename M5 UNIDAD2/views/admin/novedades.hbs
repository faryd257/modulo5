
<div class="container" style="margin:100px auto">
    {{!-- fila 1--}}
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{persona}}!</span>
                <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"
                        aria-hidden="true"></i></a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1--}} {{!-- inicio fila 2--}}
    <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>
                Nuevo</a>
        </div>
    </div>
    {{!-- fin fila 2--}}
    {{!-- inicio fila 3.--}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col" class=" text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                   {{#each novedades}}
                    <tr class="tt">
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div> {{!-- fin fila 3 --}}
</div>